---
import { motion } from 'framer-motion';

const { delay, children, className } = Astro.props;
---

<motion.section 
	client:load 
	className={className}
	initial={{ opacity: 0, filter: 'blur(4px)', y: 20 }}
	animate={{ opacity: 1, filter: 'blur(0px)', y: 0 }}
	transition={{ duration: 0.5, delay: delay }}
>
	{children}
</motion.section>